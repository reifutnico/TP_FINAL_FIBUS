<div class = "container">
    <form method="get" action='@Url.Action("Login","Account")' autocomplete="off">
        <h1>Login</h1>
        <div class = "UYC">
            <h3>Username</h3>
            <div class = "Formulario">
            <input type="text" required="" name="usuario" id="Nombre" placeholder="Su usuario...">
            </div>
            <h3>Contraseña</h3>
            <div class = "Formulario">
                <input type="password" required="" name="Contraseña" id="Contraseña" placeholder="Su contaseña">
            </div>
            <input type="checkbox" onclick="showPassword()">Mostrar contraseña
            <br>
        </div>
        <div class = "BotonLogin">
            <a href='@Url.Action("Login","Account")'><input type="submit" value="Login"></a>
        </div>
    </form>
        <div class = "Opciones">
            <h3>¿No tienes una cuenta? <a href='@Url.Action("Registro","Account")'>Registrarse</a></h3>
    </div>
    @if (ViewBag.MensajeError == true){
        <div>
            <strong>Cuidado!</strong>Los datos son incorrectos
        </div>
    }
</div>