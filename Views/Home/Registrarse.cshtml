@{
    ViewData["Title"] = "Registrarse";
}
<link rel="stylesheet" href="~/css/registro.css">
<div class="registro">
<form method="post" action='@Url.Action("Registro")' autocomplete="off">
    <div class = "container">
                <a href='@Url.Action("InicioSesion")'><img src="~/img/flecha.png" alt="Volver al Login" style="vertical-align:middle"></a>
        <h2>Registro</h2>
        <div class="row">
                <div class="col-25">
                    <label for="fname">Username:</label>
                </div>
                <div class="col-75">
                    <input type="text" id="username" name="usuario" placeholder="Su username..">

                </div>
            </div>
        <div class="row">
                <div class="col-25">
                    <label for="fname">Contraseña:</label>
                </div>
                <div class="col-75">
                    <input type="password" id="password" name="contraseña" onkeyup="validatePassword()" placeholder="Su contraseña..">
                    <p id="resultado"></p>
                </div>
            </div>

        <div class="row">
            <div class="col-25">
                <label for="fname">Confirmar Contraseña:</label>
            </div>
            <div class="col-75">
                <input type="password" id="confirmPassword" name="confirmarContraseña" onkeyup="validatePassword()" placeholder="Confirme su contraseña..">
                <p id="confirmacion"></p>
            </div>
        </div>
        
        <div class="row">
                <div class="col-25">
                    <label for="fname">Correo Electronico:</label>
                </div>
                <div class="col-75">
                    <input type="email" id="mail" name="mail" placeholder="Su mail..">
                </div>
        </div>
        <div class = "BotonLogin">
            <h3><a href='@Url.Action("Registro")'><input type="submit" value="Registrarse"></input></a></h3>
        </div>
    </div>
</form>
        @if (ViewBag.MensajeErrorREGISTRARSE == -1){
            <div class = "MSJ-error">
                <strong>Cuidado!</strong>El nombre de usuario ya está en uso
            </div>
        }
        @if (ViewBag.MensajeErrorREGISTRARSE == -2){
            <div class = "MSJ-error">
                <strong>Cuidado!</strong> No cumple con las condiciones de seguridad de la contraseña
            </div>}

             
          @if (ViewBag.MensajeErrorREGISTRARSE == -3){
            <div class = "MSJ-error">
                <strong>Cuidado!</strong>El Nombre de usuario es igual a la contraseña o estas al email
            </div>
        }
        @if (ViewBag.MensajeErrorREGISTRARSE ==-4){
            <div class = "MSJ-error">
                <strong>Cuidado!</strong>Confirmación de contraseña fallida 
            </div>
        }
        @if (ViewBag.MensajeErrorREGISTRARSE == -5){
            <div class = "MSJ-error">
                <strong>Cuidado!</strong> Nombre de usuario no permitido
            </div>
        }
        @if (ViewBag.MensajeErrorREGISTRARSE == -6){
            <div class = "MSJ-error">
                <strong>Cuidado!</strong> El email ya esta en uso
            </div>
        }
</div>

