@{
    ViewData["Title"] = "Repetidas";
}

<header>
    <nav>
        <ul>
            <li><a href='@Url.Action("Album")'>Album</a></li>
            <li><a href='@Url.Action("AbrirSobres")'>Abrir sobres</a></li>
            <li><a href='@Url.Action("Repetidas")'>Repetidas</a></li>
            <li><a href='@Url.Action("Inventario")'>Inventario</a></li>
        </ul>
        <div class="imagenesNav">
            <ul>
                <button type="button" onclick="GanarMonedasVideos()" class="botonVideos">Ganar Monedas <img src="~/img/Youtu.png"></button>
                <li><a id="lugarMonedas">@ViewBag.Usuario.Monedas <img src="~/img/moneda.png">  </a> </li>
                <li><a href='@Url.Action("InicioSesion")'> <img src="~/img/salir.png"> </a></li>
            </ul>
        </div>
    </nav>
</header>


<link rel="stylesheet" href="~/css/Repetidas.css">

@if(ViewBag.Repetidas != null && ViewBag.Repetidas.Count > 0)
{
    <div class="figuritas">
        @foreach(var item in ViewBag.Repetidas)
        {
            <div class="figurita" id="@item.IdFigurita">
                <img src="~/img/Jugadores/@item.ImagenJugador" alt="Imagen de @item.Nombre @item.Apellido" class="img-figurita" />
                <h1>@item.Nombre</h1> 
                <h1>@item.Apellido</h1>
                <button onclick="Vender('@item.IdFigurita','@item.Precio')">vender por @item.Precio</button>
               
                <form id="venderForm" action='@Url.Action("Mercado", "HomeController")' method="post">
                <input type="text" name="precio" id="precioInput" placeholder="Precio">
                <input type="text" name="descripcion" id="descripcionInput" placeholder="DescripciÃ³n">
                <input type="hidden" name="idFigurita" value="@item.IdFigurita">
                <button type="submit">Vender</button>
                </form>
            </div>
        }
    </div>
}
else
{
<div class="centered-content">
    <h1>NO HAY REPETIDAS DISPONIBLES</h1>
</div>
}