@{
    ViewData["Title"] = "Inicio Sesión";
}


<div style="display: flex; justify-content: center;">
    <div class = "container">
        <form method="post" action='@Url.Action("Login")' autocomplete="off">
            <h1>Login</h1>
            <div class = "UYC">
                <h3>Username</h3>
                <div class = "Formulario">
                <input type="text" required="" name="usuario" id="Nombre" placeholder="Su usuario...">
                </div>
                <h3>Contraseña</h3>
                <div class = "Formulario">
                    <input type="password" required="" name="Contraseña" id="Contraseña" placeholder="Su contraseña">
                </div>
                <input type="checkbox" onclick="showPassword()">Mostrar contraseña
                <br>
            </div>
            <div class = "BotonLogin">
                <a href='@Url.Action("Login")'><input type="submit" value="Login"></a>
            </div>
        </form>
            <div class = "Opciones">
                <h3>¿No tienes una cuenta? <a href='@Url.Action("Registrarse")'>Registrarse</a></h3>
        </div>
        @if (ViewBag.MensajeError == true){
            <div>
                <strong>Cuidado!</strong>Los datos son incorrectos
            </div>
        }
    </div>
</div>

